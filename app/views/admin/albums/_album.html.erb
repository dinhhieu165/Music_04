<tr>
  <td><%= album.id %></td>
  <td><%= album.name %></td>
  <td><%= album.artist.name %></td>
  <td><%= album.created_at %></td>
  <td>
    <%= link_to edit_admin_album_path(album) do %>
      <span><i class="fa fa-edit fa-1px"></i></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_albums_path(album), method: :delete, data: {confirm: "Are you sure, you will delete all song in this album!!!"} do %>
      <span><i class="fa fa-times fa-1px"></i></span>
    <% end %>
  </td>
</tr>
