<div class="container-fluid">
  <div class="row">
    <h3 class="sub-header"><%= t "admin.categories.category_list" %></h3>
    <%= form_tag(admin_categories_path, method: :get) do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "search", name: nil %>
    <% end %><br/>
    <%= link_to new_admin_category_path do %>
      <span><i class="fa fa-plus fa-2px"></i><%= t "admin.categories.category_list" %></span>
    <% end %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th><%= t "admin.categories.title" %></th>
            <th><%= t "admin.albums.created_at" %></th>
            <th><%= t "admin.albums.edit" %></th>
            <th><%= t "admin.albums.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "category", collection: @categories %>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
  </div>
</div>
