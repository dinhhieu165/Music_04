<div class="container-fluid">
 <div class="row">
  <h3 class="sub-header"><%= t "admin.artists.artist_list" %></h3>
    <%= form_tag(admin_artists_path, method: :get) do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag t("admin.albums.search"), name: nil %>
    <% end %><br/>
    <%= link_to new_admin_artist_path do %>
      <span><i class="fa fa-plus fa-2px"></i><%= t "admin.artists.new_artist" %></span>
    <% end %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th><%= t "admin.albums.name" %></th>
            <th><%= t "admin.albums.created_at" %></th>
            <th><%= t "admin.albums.edit" %></th>
            <th><%= t "admin.albums.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "artist", collection: @artists %>
        </tbody>
      </table>
      <%= paginate @artists %>
    </div>
  </div>
</div>
