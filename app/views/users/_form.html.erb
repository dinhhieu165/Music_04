<%= form_for(@user) do |f| %>
  <div class="container-fluid">
    <h3><%= t "users.form.personal_info" %></h3>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <span><%= t "users.form.name" %><label>*</label></span>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <span><%= t "users.form.email" %><label>*</label></span>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="field">
      <span><%= t "users.form.password" %><label>*</label></span>
      <%= f.password_field :password, class: "form-control" %><br/>
      <span><%= t "users.form.confirmation" %><label>*</label></span>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.submit t("users.form.submit"), class: "btn btn-primary" %>
    </div>
<% end %>
<div class="clearfix"> </div>
