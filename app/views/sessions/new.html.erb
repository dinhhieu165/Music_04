<div class="shoes-grid">
  <div class="container-fluid">
  	<h3><%= t "sessions.new.register" %></h3>
    <%= form_for(:session, url: login_path) do |f| %>
      <div>
      	<span><%= t "password_resets.new.email_address" %><label>*</label></span>
        <%= f.email_field :email, class: "form-control"%>
      </div>
      <div>
      	<span><%= t "password_resets.edit.password" %><label>*</label></span>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= link_to t("sessions.new.forgot_password"), new_password_reset_path, class: "forgot" %>
      <br/><br/>
      <%= f.label :remember_me, class: "check_box inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "sessions.new.remember_me" %></span>
      <% end %><br/>
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary"%>
    <% end %>
  </div>
  <div class=" login-left">
    <%= link_to "Sign in with Twitter", "/auth/twitter" %><br/>
    <%= link_to t("sessions.new.new_account"), signup_path, class: "acount-btn" %>
  </div>
  <div class="clearfix"></div>
</div>